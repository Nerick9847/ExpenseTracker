@page "/dashboard"
@using ExpenseTracker.Services
@inject TransactionService transactionService
@inject DebtService debtService

<style>
    .dashboard-card {
        border-radius: 14px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
        background-color: #d9e2f3;
        border: 4px solid #000000;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .total-balance {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 14px;
        box-shadow: 0 4px 4px rgba(0, 0, 0, 0.1) inset;
        background-color: #f3f4f6;
        border: 2px solid #888a89;
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
    }

    .chart-container {
        height: 300px;
    }
</style>

<div class="container mt-4">
    <div class="dashboard-header">
        <h3 style="color: black;">Dashboard</h3>
        <div class="total-balance">
            Total Balance: @totalBalance
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="dashboard-card bg-success text-white text-center">
                <h5>Total Inflows</h5>
                <h2>@totalIncome</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-card bg-danger text-white text-center">
                <h5>Total Outflows</h5>
                <h2>@totalExpense</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-card bg-warning text-center">
                <h5>Total Debt</h5>
                <h2>@totalDebt</h2>
            </div>
        </div>
    </div>

    <div class="chart-container" style="width: 100%; margin: 0; padding: 0;">
        <h3 style="text-align: center; margin-bottom: 20px;">Bar Graph</h3>
        <MudChart ChartType="ChartType.Bar"
                  ChartSeries="@Series"
                  @bind-SelectedIndex="Index"
                  XAxisLabels="@XAxisLabels"
                  Width="100%"
                  Height="400px"
                  Style="width: 100%;"
        >
        </MudChart>
    </div>
</div>

@code {
    private int Index = -1;

    public List<ChartSeries> Series = new List<ChartSeries>()
    {
        new ChartSeries() { Name = "Income", Data = new double[] { 40, 20, 25, 27, 46, 60, 48, 80, 15, 12, 11, 20 } },
        new ChartSeries() { Name = "Expense", Data = new double[] { 19, 24, 35, 13, 28, 15, 13, 16, 31, 15, 19, 24 } },
    };
    public string[] XAxisLabels = { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" };

    private decimal totalBalance;
    private decimal totalIncome;
    private decimal totalExpense;
    private decimal totalDebt;

    protected override async Task OnInitializedAsync()
    {
        // Fetch totals from the respective services
        totalIncome = await transactionService.GetTotalIncomeAsync();
        totalExpense = await transactionService.GetTotalExpenseAsync();
        totalDebt = await debtService.GetTotalUnpaidDebtAsync();

        // Calculate total balance
        totalBalance = totalIncome - totalExpense - totalDebt;
    }
}
